<h1>Interventions</h1>
<br>

<%= form_for [@recruit, @intervention] do |form| %>
  <p>
    <%= form.label :group, "Intervention program:" %>
    <%= form.select(:group, options_for_select(@group_options), {:prompt => "Select intervention program"}) %>
  </p>
  <p>
    <%= form.label :nurse, "Assigned nurse:" %>
    <%= form.select(:nurse, options_for_select(@nurse_options), {:prompt => "Select assigned nurse"}) %>
  </p>

  <p>  
    <%= form.label :intervention_start_date, "Intervention start date:" %>
    <%= form.date_field :intervention_start_date %>
  </p>  
  
  <p>
    <%= form.label :intervention_end_date, "Intervention end date:" %>
    <%= form.date_field :intervention_end_date %>
  </p>

  <p>
    <%= form.label :previous_hospitalizations, "Number of hospitalizations in the previous year:" %>
    <%= form.text_field :previous_hospitalizations %>
  </p>

   <p>
    <%= form.label :outcome, "Intervention outcome:" %>
   	<%= form.select(:outcome, options_for_select(@outcome_options), {:prompt => "Select outcome"}) %>  </p>

  <p><%= form.submit "Submit" %></p>

<% end %>