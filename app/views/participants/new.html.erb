<h1>New Participant Form</h1>

<%= form_for @participant do |form| %>
  <%#= form.error_messages_for :medical_record_number %>
  <p>
    <%= form.label :first_name, "First name:" %>
    <%= form.text_field :first_name %>
  </p>

  <p>
    <%= form.label :middle_initial, "Middle initial(s):" %>
    <%= form.text_field :middle_initial %>
  </p>  

  <p>
    <%= form.label :last_name, "Last name:" %>
    <%= form.text_field :last_name %>
  </p>

  <p>  
    <%= form.label :medical_record_number, "MRN:" %>
    <%= form.text_field :medical_record_number %>
  </p>  
  
  <p>
    <%= form.label :date_of_birth, "Date of birth:" %>
    <%= form.date_field :date_of_birth %>
  </p>

  <p><%= form.submit "Submit" %></p>
<% end %>